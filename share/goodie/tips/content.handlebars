<div class="gw">
    <div class="g fifty frm">

        <div class="tips_input-section">
            <label for="bill">Bill</label>
            <input type="number" id="bill_input" class="whole--screen-s" min="0" step="0.01" />       
        </div>

        <div class="tips_input-section">
            <label for="tip">Tip %</label>
            <input type="number" id="bill_tip" class="whole--screen-s" min="0" />
        </div>

        <div class="tips_input-section">
            <label for="number of people">No. of People</label>
            <input type="number" id="bill_people" class="whole--screen-s" value="1" min="0">
        </div>

    </div>

    <div class="g fifty frm">
        <div class="tips_block tips_block--tip">
            <h4 id="tip_label" class="text--primary">Tip</h4>
            <span id="tip" class="text--primary">-</span>
        </div>

        <div class="tips_block_total tips_block--total">
            <h4 id="total_label" class="text--primary">Total</h4>
            <span id="total" class="text--primary t-bold">-</span>
        </div>
    </div>
</div>
